<h1>Log in</h1>

<div class="row">
  <div class="col-md-4 offset-3">
    <%= form_with(url: sessions_path, scope: :session, local: true) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email%>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.submit "Log in" %>
    <% end %>

    <h5>Don't have an account? </h5> <%= link_to 'Sign up', new_user_path%>

  </div>
</div>